<h1>My profile</h1>
<% path = current_user.photo.attached? ? cl_image_path(current_user.photo.key, height: 300, crop: :fill) : asset_path( 'default_profil.png')%>

 <img src="<%=path%>">

<div class= "mt-4">
  <p><strong>Name:</strong> <%= current_user.name %></p>
  <p><strong>E-mail:</strong> <%= current_user.email %></p>
  <p><strong>Description:</strong> <%= current_user.description %></p>
</div>


<div class="mt-5">
  <%= link_to "Edit my information", edit_user_registration_path %>
</div>
