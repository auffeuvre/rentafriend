<% if booking.validation.nil? %>
<div class=" pe-2">
  <%= link_to activity_booking_path(@activity, booking, :response => true), data: { turbo_method: :patch, turbo_confirm: "Are you sure ?" } do %>
    <i class="fa-solid fa-square-check display-6"></i>
  <% end %>
</div>
<div>
  <%= link_to activity_booking_path(@activity, booking, :response => false), data: { turbo_method: :patch, turbo_confirm: "Are you sure ?" } do %>
    <i class="fa-solid fa-square-xmark display-6"></i>
  <% end %>
</div>
<% elsif booking.validation == true %>
  <p>ACCEPTED</p>
<% elsif booking.validation == false %>
  <p>DECLINED</p>
<% end %>